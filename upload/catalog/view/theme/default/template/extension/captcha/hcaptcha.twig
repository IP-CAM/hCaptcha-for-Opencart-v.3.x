<fieldset class="mb-4">
  <legend>{{ text_captcha }}</legend>
  <div class="form-group required">
    {% if route|slice(0, 9) == 'checkout/' %}
      <label class="control-label" for="input-payment-captcha">{{ entry_captcha }}</label>

      <div id="input-payment-captcha" class="h-captcha" data-sitekey="{{ site_key }}"></div>
    
      {% if error_captcha %}
        <span class="text-error">{{ error_captcha }}</span>
      {% endif %}
    {% else %}
      <label class="col-sm-2 control-label">{{ entry_captcha }}</label>

      <div class="col-sm-10">
        <div class="h-captcha" data-sitekey="{{ site_key }}"></div>

        {% if error_captcha %}
          <span class="text-error">{{ error_captcha }}</span>
        {% endif %}
        </div>
    {% endif %}
  </div>
</fieldset>
<script src="https://hcaptcha.com/1/api.js?hl={{ lang }}" async defer></script>